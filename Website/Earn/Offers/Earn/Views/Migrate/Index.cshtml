<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome to Microsoft Earn</title>
    <link rel="icon" type="image/png" href="https://az414848.vo.msecnd.net/card-linked-assets/earn-fv-128x128.png" />
    @System.Web.Optimization.Styles.Render("~/earn/styles/enrollBundle")
    <style type="text/css">
        #footer {
            position: absolute;
            bottom: 0;
            left: 0;
        }

        a.button {
            padding: 0 20px;
            background-color: #0078d7;
            border: 1px solid #0078d7;
            color: #fff;
            text-decoration: none;
            line-height: 36px;
            display: block;
            width: 300px;
            font-family: Segoe UI Web Regular;
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <section id="nav">
        <div class="container">
            <div class="logo">
                <a href="/">
                    <img src="https://az414848.vo.msecnd.net/card-linked-assets/earn_logo_blue_gry-1.png" />
                </a>
            </div>
            <div class="right-nav">
                <div class="top-nav name"><p id="login">@ViewBag.ProfileName @Html.Raw(ViewBag.LoginHtmlLink)</p></div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </section>

    <section id="settings" class="accounts-container">
        <div class="container">
            <h1>Thank you,</h1>
            <p>Youâ€™ve successfully enrolled in Earn.</p>
            <a class="button" href="/">Learn more</a>
        </div>
    </section>

    @Html.Partial("~/offers/earn/views/common/footer.cshtml")
    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.8.3.js"></script>

    <script>
        $(document).ready(function () {
            var $elem = $('#idPPScarab');
            var $img = $elem.find('img');

            var signedIn = $img.hasClass('PassportSignOut');
            var signedOut = $img.hasClass('PassportSignIn');
            var text = '';
            if (signedIn) {
                text = 'Sign Out';
            }

            var liveMobileQueryString = $(window).width() < 710 ? '&pcexp=false' : '';
            if (signedOut) {
                text = 'Sign In';
                $('#signinbutton').attr('href', $elem.attr('href') + liveMobileQueryString);
                $elem.attr('href', $elem.attr('href') + liveMobileQueryString);
            }

            $elem.html(text);
            $('#login').show();
        });
    </script>
</body>
</html>