@{
    Layout = "~/offers/earn/views/account/accountslayout.cshtml";
    ViewBag.Title = "Support";
}

<section id="support" class="accounts-container">
    <div class="container">
        <h1>Support</h1>
        <br />
        <br />
        <h2>MICROSOFT EARN. WE ARE HERE TO HELP YOU!</h2>
        <br />
        <br />
        <p>
            <strong>Customer Notice</strong>
            <br />
            <br />
            Thank you for contacting Microsoft Earn customer support. To make sure that you can receive a reply from Microsoft, please add the “Microsoft.com” domain to your email “safe list”. If you do not receive a response in your “inbox” within 48 hours, please check your “junk mail” folders.
            <br />
            <br />
            Check out our comprehensive @Html.ActionLink("FAQ", "Support", "Account") for answers to common questions.
            <br />
            <br />
            Complete the form below for <strong>Microsoft Earn Support</strong> and a member of the support team will contact you within 24-48 hours.
        </p>
        <div class="support-container" data-bind="with: supportView">
            <div data-bind="visible:!requestSubmitted()">

                <p>
                    <sup class="required">*</sup> Required
                </p>

                <br />

                <p>Your full name <sup class="required">*</sup></p>
                <input type="text" data-bind="value: fullName" />

                <p>Your Microsoft Earn email address <sup class="required">*</sup></p>
                <input type="text" placeholder="Your Microsoft Earn email address." data-bind="value: email" />

                <p>What would you like assistance with? <sup class="required">*</sup></p>
                <select data-bind="options: assistWithOptions,
                                     value: assistWith,
                            optionsCaption: 'Please select an option'"></select>

                <h3>Please explain further</h3>

                <p>If you are inquiring about a missing Earn transaction or a missing statement credit, please provide the following information:</p>
                <br />

                <p>Last 4 digits of the credit/debit card used to make the purchase, card brand</p>
                <div class="card-info">
                    <input class="last4digits" type="text" maxlength="4" data-bind="value: last4digits" />
                    <select data-bind="options: cardBrandOptions,
                                         value: cardBrand,
                                optionsCaption: 'Please select an option'"></select>
                </div>


                <p class="clear">Please specify the type of card</p>
                <select data-bind="options: cardTypeOptions,
                                     value: cardType,
                            optionsCaption: 'Please select an option'"></select>

                <p data-bind="visible: showDidYouEnterPIN">If a debit card, did you enter a PIN when you made the purchase? <sup class="required">*</sup></p>
                <select data-bind="options: didYourEnterPINOptions,
                                     value: didYourEnterPIN,
                            optionsCaption: 'Please select an option',
                                   visible: showDidYouEnterPIN"></select>

                <p>Name of the merchant where you made the purchase:</p>
                <input type="text" data-bind="value: merchantName" />

                <p>Address of where you made the purchase (please specify if this was an online purchase):</p>
                <textarea type="text" maxlength="200" data-bind="value: merchantAddress" required></textarea>

                <p>Date of the purchase(s):</p>
                <textarea type="text" maxlength="100" data-bind="value: purchaseDate" required></textarea>

                <p>Amount of purchase(s):</p>
                <textarea type="text" maxlength="100" data-bind="value: amount" required></textarea>

                <p>If your question is related to a special Earn promotion please specify the name of the promotion:</p>
                <input type="text" data-bind="value: promotion" />

                <p>Please provide any additional details here:</p>
                <textarea type="text" maxlength="1000" data-bind="value: details" required></textarea>

                <p class="error" data-bind="text: error"></p>

                <a data-bind="click: submitClicked, visible: !showSpinner() && !requestSubmitted()" class="button">Send message</a>
            </div>

            <p class="info" data-bind="visible:requestSubmitted">Your request has been submitted successfully</p>
        </div>
    </div>
</section>

@section Fineprints{
    <section id="fineprints">
        <div class="container">
            <p class="fineprint">
                [*] Earn Credits are only received for transactions at participating merchants in Arizona, Massachusetts and Washington, and only apply to purchases made at the online <a href="http://www.microsoftstore.com/">Microsoft Store</a> and local Microsoft Stores in Arizona, Massachusetts, and Washington.
                Please note that it may take a few days before a purchase appears in your @Html.ActionLink("transaction history", "History", "Account").
                If you believe you did not receive Earn Credits due, please @Html.ActionLink("contact us", "Help", "Account") and provide the place and date of purchase, along with the last 4 digits of your credit/debit card.
                In some cases, Shell transactions may not show up in your Pending transactions at all, but should show up in your Confirmed transactions within a few days.
            </p>
        </div>
        <div class="clear"></div>
    </section>
}