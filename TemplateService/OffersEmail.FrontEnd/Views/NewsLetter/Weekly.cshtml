@model DailyDealsVM
@{
    ViewBag.Title = "Newsletter Weekly";
    Layout = "~/Views/Shared/_ResponsiveLayoutA.cshtml";
}

@*Header*@
@Html.Partial("Partial/Header", Model.Location)

@*Deals*@
@if (Model != null)
{
    //Hero Tile
    if (Model.HeroDeal != null)
    {

        @Html.Partial("Partial/HeroTile", Model.HeroDeal)
    }

    //Additional Tile
    if (Model.FeaturedDeals != null && Model.FeaturedDeals.Any())
    {
        foreach (var deal in Model.FeaturedDeals)
        {
            @Html.Partial("Partial/FeaturedTile", deal)
        }
    }
}

@*Social Sharing*@
@Html.Partial("Partial/SocialSharing")

@*Footer*@
@Html.Partial("Partial/Footer", Model.UnsubscribeUrl)


