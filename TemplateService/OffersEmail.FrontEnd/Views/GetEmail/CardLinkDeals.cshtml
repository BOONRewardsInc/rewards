@model MsnDealsVM
@{
    Layout = "~/Views/GetEmail/_DailyDealLayout.cshtml";
    ViewBag.Location = Model.Location;
}

<tr>
    <td style="height: 350px; padding-bottom: 0; padding-left: 0; padding-right: 0; padding-top: 10px;">
        <table width="100%" cellspacing="0" cellpadding="0" bgcolor="#eeeeee" style="background-color: #eeeeee; width: 100%; height: 350px; padding-left: 0; padding-bottom: 0; padding-top: 0; padding-right: 0; border-left-width: 0; border-bottom-width: 0; border-right-width: 0; border-top-width: 0;">

            <tr>
                <td align="left" valign="middle" style="width: 340px; text-align: left; vertical-align: middle; padding-left: 0; padding-bottom: 0; padding-top: 0; padding-right: 0;">
                    <table cellspacing="0" cellpadding="0" width="100%" style="color: #777777; font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif; width: 100%; padding-left: 0; padding-bottom: 0; padding-top: 0; padding-right: 0;">
                        <tr>
                            <td align="left" bgcolor="#eeeeee" style="font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; padding-top: 15px; padding-right: 20px; padding-bottom: 0; padding-left: 20px; background-color: #eeeeee; text-align: left; font-size: 35px; color: #b4009e;">
                                @DailyDeals.CardLinkParagraph1
                            </td>
                        </tr>
                        <tr>
                            <td align="left" bgcolor="#eeeeee" style="font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif; padding-top: 15px; padding-right: 20px; padding-bottom: 0; padding-left: 20px; background-color: #eeeeee; text-align: left; font-size: 20px; line-height: 20px;">
                                @DailyDeals.CardLinkParagraph2
                            </td>
                        </tr>
                        <tr>
                            <td align="left" bgcolor="#eeeeee" style="font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif; padding-top: 10px; padding-right: 20px; padding-bottom: 0; padding-left: 20px; background-color: #eeeeee; text-align: left; font-size: 16px;">
                                @DailyDeals.CardLinkParagraph3
                            </td>
                        </tr>
                        <tr>
                            <td align="left" bgcolor="#eeeeee" style="padding-top: 20px; padding-right: 20px; padding-bottom: 18px; padding-left: 20px; background-color: #eeeeee; text-align: left; font-size: 16px;">
                                <table>
                                    <tr>
                                        <td valign="middle" align="center" bgcolor="ffb900" style="font-family: 'Segoe UI Semibold', 'Segoe UI', Arial, Helvetica, sans-serif; vertical-align: middle; width: 200px; height: 70px; background-color: #ffb900; text-align: center; font-size: 20px;">
                                            <a href="https://www.bing.com/offers?bor=@ViewBag.referrer&bof=@ViewBag.campaign" style="padding-right: 0; padding-top: 0; padding-left: 0; padding-bottom: 0; text-decoration: none; color: #ffffff; text-align: center; font-size: 20px; vertical-align: middle" target="_blank">@DailyDeals.VisitCardLinkedOffers</a>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>

                <td align="left" bgcolor="#cccccc;" style="width: 300px; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; background-color: #cccccc; text-align: left">
                    <img align="middle" height="350" width="300" src="@DailyDeals.MsnSplashImage" style="width: 300px; height: 350px; border-top-width: 0; border-right-width: 0; border-bottom-width: 0; border-left-width: 0;" alt="@DailyDeals.MsnParagraph1" />
                </td>
            </tr>
        </table>
    </td>
</tr>

@foreach (var deal in this.Model.FeaturedDeals)
{
    @Html.Partial("Partial/FeaturedTile", deal, new ViewDataDictionary { { "IsCardLink", true } })
}