@model DealVM

<!-- Additional Tile -->
<table width="100%" bgcolor="#d8d8d8" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="left-image">
    <tbody>
        <tr>
            <td>
                <table width="560" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                        <tr>
                            <td width="100%">
                                <table bgcolor="#f5f5f5" width="560" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                                    <tbody>

                                        <tr>
                                            <td>
                                                <table width="560" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <!-- Start of left column -->
                                                                <table width="180" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidth">
                                                                    <tbody>
                                                                        <!-- image -->
                                                                        <tr>
                                                                            <td width="180" height="180" align="center" class="devicewidth">
                                                                                <div class="imgpop">
                                                                                    <a target="_blank" href="@Model.TransactionUrl">
                                                                                        <img src="@Model.MediumImageUrl" alt="@Model.BusinessName" border="0" width="180" height="180" style="display: block; border: none; outline: none; text-decoration: none;" class="col2img" />
                                                                                    </a>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                        <!-- /image -->
                                                                    </tbody>
                                                                </table>
                                                                <!-- end of left column -->
                                                                <!-- spacing for mobile devices-->
                                                                <table align="left" border="0" cellpadding="0" cellspacing="0" class="mobilespacing">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td width="100%" height="15" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                                <!-- end of for mobile devices-->
                                                                <!-- start of right column -->
                                                                <table width="360" align="right" border="0" cellpadding="0" cellspacing="0" class="devicewidthmob" style="font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif;">
                                                                    <tbody>
                                                                        <!-- Spacing -->
                                                                        <tr>
                                                                            <td width="100%" height="20" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;" colspan="2">&nbsp;</td>
                                                                        </tr>
                                                                        <!-- /Spacing -->
                                                                        <tr>
                                                                            <td width="55%" style="padding-right: 10px; vertical-align: top;">
                                                                                <table cellpadding="0" cellpadding="0" width="100%" style="font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; width: 100%;">
                                                                                    <tr>
                                                                                        <td valign="top" style="font-size: 14px; color: #444444; text-align: left; line-height: 24px;">@Model.BusinessName
                                                                                        </td>
                                                                                    </tr>
                                                                                    <!-- end of title -->
                                                                                    <!-- Spacing -->
                                                                                    <tr>
                                                                                        <td width="100%" height="10" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                                    </tr>
                                                                                    <!-- /Spacing -->
                                                                                    <tr>
                                                                                        <td valign="top" style="font-size: 18px; color: #b4009e; text-align: left; line-height: 24px;">@Model.Title
                                                                                        </td>
                                                                                    </tr>
                                                                                    <!-- end of title -->
                                                                                    <!-- Spacing -->
                                                                                    <tr>
                                                                                        <td width="100%" height="20" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                                    </tr>
                                                                                    <!-- /Spacing -->
                                                                                </table>

                                                                            </td>
                                                                            <td width="45%" style="padding-right: 20px;">
                                                                                <table cellspacing="0" cellpadding="0" width="100%" style="font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; width: 100%; padding-left: 0; padding-bottom: 0; padding-top: 0; padding-right: 0;">
                                                                                    <tr>
                                                                                        <td valign="top" align="right" style="text-align: right; vertical-align: top; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; font-size: 14px; color: #444444;">
                                                                                            @if (!(string.IsNullOrWhiteSpace(Model.Discount) && string.IsNullOrWhiteSpace(Model.DiscountAmmount)))
                                                                                            {
                                                                                                @DailyDeals.SaveHeader
                                                                                            }
                                                                                        </td>
                                                                                    </tr>
                                                                                    <!-- Spacing -->
                                                                                    <tr>
                                                                                        <td width="100%" height="8" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                                    </tr>
                                                                                    <!-- /Spacing -->
                                                                                    <tr>
                                                                                        <td valign="top" align="right" style="text-align: right; vertical-align: top; font-size: 40px; color: #b4009e; line-height: 40px;">
                                                                                            @(!string.IsNullOrWhiteSpace(Model.Discount) ? Model.Discount : Model.DiscountAmmount)
                                                                                        </td>
                                                                                    </tr>
                                                                                    <!-- Spacing -->
                                                                                    <tr>
                                                                                        <td width="100%" height="30" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                                    </tr>
                                                                                    <!-- /Spacing -->
                                                                                    <tr>
                                                                                        <td align="right">
                                                                                            <table border="0" cellpadding="0" cellspacing="0" class="tablet-button" st-button="edit" width="100%">
                                                                                                <tbody>
                                                                                                    <tr>
                                                                                                        <td align="center" valign="middle" height="40" width="100%" style="background-color: #ffa615; border-top-left-radius: 4px; border-bottom-left-radius: 4px; border-top-right-radius: 4px; border-bottom-right-radius: 4px; background-clip: padding-box; font-size: 16px; font-family: Helvetica, arial, sans-serif; text-align: center; color: #ffffff; font-weight: 300; padding-left: 10px; padding-right: 10px;">
                                                                                                            <span style="color: #ffffff; font-weight: 300; vertical-align: bottom">
                                                                                                                <a style="color: #ffffff; text-align: center; text-decoration: none;" href="@Model.TransactionUrl">@DailyDeals.ViewOffer</a>
                                                                                                            </span>
                                                                                                        </td>
                                                                                                    </tr>
                                                                                                </tbody>
                                                                                            </table>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <!-- Spacing -->
                                                                                    <tr>
                                                                                        <td width="100%" height="20" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                                                                    </tr>
                                                                                    <!-- /Spacing -->
                                                                                </table>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                                <!-- end of right column -->
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                        <!-- Spacing -->
                                        <tr>
                                            <td height="10" bgcolor="#ffffff" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
<!-- end of Additional Tile -->