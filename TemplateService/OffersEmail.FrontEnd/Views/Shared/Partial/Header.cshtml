<!-- Start of header -->
@* offers logo*@
<table width="100%" bgcolor="#d8d8d8" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="header">
    <tbody>
        <tr>
            <td>
                <table width="560" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                        <tr>
                            <td width="100%">
                                <table bgcolor="#303030" width="560" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                                    <tbody>
                                        <!-- Spacing -->
                                        <tr>
                                            <td height="15" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                        <tr>
                                            <td>
                                                <!-- logo -->
                                                <table width="100%" align="left" border="0" cellpadding="0" cellspacing="0" style="font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif;">
                                                    <tbody>
                                                        <tr>
                                                            <td valign="bottom" align="left" style="vertical-align: bottom; text-align: left; width: 20%; padding-left: 20px;">
                                                                <a href="https://www.bing.com/offers?bor=@ViewBag.referrer&bof=@ViewBag.campaign" style="padding-right: 0; padding-top: 0; padding-left: 0; padding-bottom: 0; text-decoration: none;" target="_blank">
                                                                    <img width="146" height="35" border="0" src="https://az414848.vo.msecnd.net/assets/offers-email-logo-nobeta.png" style="border: 0; width: 146px; height: 35px; vertical-align: bottom; border-left-width: 0; border-bottom-width: 0; border-right-width: 0; border-top-width: 0; font-size: 10px;" alt="Bing Offers" />
                                                                </a>
                                                            </td>
                                                            @if (!string.IsNullOrEmpty(Model))
                                                            {
                                                                <td valign="middle" align="left" style="vertical-align: middle; text-align: left; font-size: 20px; line-height: 25px; color: #a2a2a2;">&nbsp;|&nbsp;<span style="color: white; font-weight: normal; padding-top: 5px;">@Model</span>
                                                                </td>
                                                            }
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <!-- end of logo -->
                                            </td>
                                        </tr>
                                        <!-- Spacing -->
                                        <tr>
                                            <td height="15" style="font-size: 1px; line-height: 1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
<!-- End of Header -->