@model CardLinkVM
<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>@CardLink.AddCard_Title</title>
</head>
<body>
    <table width="443" cellpadding="20" cellspacing="0" style="margin-right: auto; margin-left: auto; margin-bottom: 0; margin-top: 0; width: 443px; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; padding-left: 20px; padding-bottom: 20px; padding-top: 20px; padding-right: 20px; border-left-width: 0; border-bottom-width: 0; border-right-width: 0; border-top-width: 0;">
        @Html.Partial("~/Views/CardLink/Partial/TransactionHeader.cshtml")
        <tr>
            <td align="left" valign="middle" style="color: #505050; font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif; text-align: left; vertical-align: middle; padding-top: 0; padding-right: 11px; padding-bottom: 10px; padding-left: 11px;">
                <h2 style="color: #505050; font-weight: normal; font-size: 30px; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; margin: 0;">@CardLink.Hello,</h2>
                <p>@ViewBag.CardAddedMessage</p>
                <p>@CardLink.AddCardThanks2</p>
                <p>@CardLink.HowWorks</p>
                <ol style="font-weight: bold;">
                    <li style="margin: 0 0 0 0">
                        <span style="font-weight: normal;">@CardLink.AddCard_Howwork1</span>
                    </li>
                    <li style="margin: 0 0 0 0">
                        <span style="font-weight: normal">@CardLink.AddCard_Howwork2</span>
                    </li>
                    <li style="margin: 0 0 0 0">
                        <span style="font-weight: normal">@CardLink.AddCard_Howwork3</span>
                    </li>
                </ol>
                <p>@CardLink.AddCard_NoCoupons</p>
                <a bgcolor="#ffb900" width="240px" height="40px" target="_blank" href="https://www.bing.com/offers?bor=@ViewBag.referrer&bof=@ViewBag.campaign" style="display: block; height: 45px; line-height: 45px; font-size: 30px; text-align:center; width: 240px; background-color: #ffb900; text-decoration: none; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; color: #505050; padding-left: 10px;">@CardLink.More</a>
                @{ 
                    if (ViewBag.isUnVerifiedUser != true)   
                    {
                        <br />
                        <p>@CardLink.AddCard_AddAnotherCard</p>
                        <a bgcolor="#ffb900" width="320px" height="40px" target="_blank" href="https://www.bing.com/offers/settings/cardlinked?bor=@ViewBag.referrer&bof=@ViewBag.campaign" style="display: block; height: 45px; line-height: 45px; font-size: 30px; text-align:center; width: 320px; background-color: #ffb900; text-decoration: none; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; color: #505050; padding-left: 10px;">@CardLink.AddAnotherCard</a>
                    }
                }
            </td>
        </tr>
        @Html.Partial("~/Views/CardLink/Partial/MoreAndFinePrint.cshtml", string.Empty)
        @Html.Partial("~/Views/CardLink/Partial/TransactionFooter.cshtml")
    </table>
</body>
</html>